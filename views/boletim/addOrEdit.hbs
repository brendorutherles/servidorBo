<h3>{{viewTitle}}</h3>

<form action="/boletim" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{boletim._id}}">
    <div class="form-group">
        <label>Mike</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{boletim.mike}}">
        <div class="text-danger">
            {{boletim.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Respons√°vel</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{boletim.responsavel}}">
        <div class="text-danger">
            {{boletim.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Gt</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{boletim.gt}}">
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{boletim.efetivo}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Enviar</button>
        <a class="btn btn-secondary" href="/boletim/list"><i class="fa fa-list-alt"></i> Ver mais</a>
    </div>
</form>